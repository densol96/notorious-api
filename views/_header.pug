header.header
  nav.nav.nav--tours
    a.nav__el(href="/overview") All tours
  div.header__logo
    img(src="/img/logo-white.png", alt="Natours logo")
  nav.nav.nav--user
    - if(!user)
        a.nav__el(href='/login') Log in
        a.nav__el.nav__el--cta Sign up
    - else 
        a.nav__el.nav__el--logout(href='#') Log out
        a.nav__el(href='#')
            img.nav__user-img(src=`/img/users/${user.photo}`, alt='Your user avatar!')
            span= user.name.split(' ')[0]